@page "/skills"

<div class="skills-page">
    <!-- Hero Section -->
    <section class="skills-hero">
        <div class="blob blob-1"></div>
        <div class="blob blob-2"></div>
        
        <div class="skills-hero-content">
            <h1 class="page-hero-title">Skills & Certifications</h1>
            <p class="page-hero-subtitle">Professional development and technical expertise</p>
        </div>
        
        <div class="wave-container">
            <div class="wave">
                <svg class="wave-svg" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1200 120" preserveAspectRatio="none">
                    <path d="M0,50 C150,80 350,0 600,50 C850,100 1050,30 1200,50 L1200,120 L0,120 Z" 
                          fill="var(--bg-primary)" opacity="0.7">
                        <animate attributeName="d" 
                                 dur="10s" 
                                 repeatCount="indefinite"
                                 values="M0,50 C150,80 350,0 600,50 C850,100 1050,30 1200,50 L1200,120 L0,120 Z;
                                         M0,50 C150,20 350,100 600,50 C850,0 1050,80 1200,50 L1200,120 L0,120 Z;
                                         M0,50 C150,80 350,0 600,50 C850,100 1050,30 1200,50 L1200,120 L0,120 Z"/>
                    </path>
                </svg>
            </div>
        </div>
    </section>

    <!-- Skills Summary -->
    <section class="skills-summary">
        <div class="container">
            <div class="summary-card">
                <h2>Technical Expertise</h2>
                <p>
                    @certifications.Count professional certifications earned across programming, 
                    design, and productivity tools. Continuously expanding skills in software development, 
                    game development, and emerging technologies.
                </p>
            </div>
        </div>
    </section>

    <!-- Certifications Grid -->
    <section class="certifications-section">
        <div class="container">
            <h2 class="section-title">Certifications</h2>
            
            <div class="certifications-grid">
                @foreach (var (cert, index) in certifications.Select((c, i) => (c, i)))
                {
                    <div class="cert-card" style="animation-delay: @(index * 0.1)s">
                        <div class="cert-image-container">
                            <img src="@cert.ImageUrl" alt="@cert.Name" class="cert-image" />
                        </div>
                        
                        <div class="cert-content">
                            <h3 class="cert-title">@cert.Name</h3>
                            <p class="cert-description">@cert.Description</p>
                            
                            <div class="cert-tags">
                                @foreach (var tag in cert.Tags)
                                {
                                    <span class="cert-tag">@tag</span>
                                }
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>

    <!-- Skills Categories -->
    <section class="skills-categories" id="skills-categories">
        <div class="container">
            <h2 class="section-title">Technical Skills</h2>
            
            <div class="categories-grid">
                <div class="category-card">
                    <div class="category-icon">üíª</div>
                    <h3>Programming Languages</h3>
                    <div class="category-skills">
                        <span class="skill-badge">C# (3 Years)</span>
                        <span class="skill-badge">Python (2 Years)</span>
                        <span class="skill-badge">HTML/CSS</span>
                        <span class="skill-badge">JavaScript</span>
                    </div>
                </div>

                <div class="category-card">
                    <div class="category-icon">üõ†Ô∏è</div>
                    <h3>Tools & Frameworks</h3>
                    <div class="category-skills">
                        <span class="skill-badge">Godot Engine</span>
                        <span class="skill-badge">Blazor</span>
                        <span class="skill-badge">Visual Studio</span>
                        <span class="skill-badge">Git/GitHub</span>
                    </div>
                </div>

                <div class="category-card">
                    <div class="category-icon">üéÆ</div>
                    <h3>Game Development</h3>
                    <div class="category-skills">
                        <span class="skill-badge">Godot (C#)</span>
                        <span class="skill-badge">Networking</span>
                        <span class="skill-badge">XR Development</span>
                        <span class="skill-badge">State Management</span>
                    </div>
                </div>

                <div class="category-card">
                    <div class="category-icon">üé®</div>
                    <h3>Design & Productivity</h3>
                    <div class="category-skills">
                        <span class="skill-badge">Adobe Illustrator</span>
