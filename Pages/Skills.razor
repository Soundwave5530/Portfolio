@page "/skills"

<div class="skills-container">
    <h2 class="page-title slide-in-left">Skills</h2>
    <hr class="slide-in-right"/>
    <br />
    <br />
    <br />

    <div class="card fade-in-up">
        <h3>Certifications</h3>
        <p>This section consists of my industry-grade certifications I have earned over the years.</p>
        <br />
    </div>
    @foreach (var cert in certifications)
    {
        <div class="skill-card fade-in-up">
            <img class="skill-card-image" src="@cert.ImageUrl">

            <div class="skill-card-content">
                <h3>@cert.Name</h3>
                <p>@cert.Description</p>

                <div class="skill-card-bottom">
                    @foreach (var tag in cert.Tags)
                    {
                        <span class="tag">@tag</span>
                    }
                </div>
            </div>
        </div>
    }
</div>

