@inherits LayoutComponentBase
@inject IJSRuntime JS

<!-- Theme Toggle Button (Fixed Position) -->
<div class="theme-toggle-container">
    <button class="theme-toggle" @onclick="ToggleTheme" aria-label="Toggle theme">
        <span class="theme-icon">@themeIcon</span>
    </button>
</div>

<!-- Navigation -->
<nav id="nav" class="@navClass">
    <div class="nav-content">
        <NavLink href="/" class="nav-logo">AK</NavLink>
        <div class="nav-right">
            <ul class="nav-links">
                <li><NavLink href="/">Home</NavLink></li>
                <li><NavLink href="/projects">Projects</NavLink></li>
                <li><NavLink href="/skills">Skills</NavLink></li>
                <li><NavLink href="/resume">Resume</NavLink></li>
            </ul>
        </div>
    </div>
</nav>

<!-- Main Content -->
<main>
    @Body
</main>

<!-- Footer -->
<footer class="site-footer">
    <p>© 2025 Andrew Krause. Built with Blazor & C#</p>
</footer>

<style>
    /* Theme Toggle */
    .theme-toggle-container {
        position: fixed;
        top: 20px;
        right: 40px;
        z-index: 1001;
    }

    .theme-toggle {
        width: 50px;
        height: 50px;
        border-radius: 50%;
        background: var(--bg-tertiary);
        border: 2px solid var(--border-color);
        cursor: pointer;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: all 0.3s ease;
        font-size: 24px;
    }

    .theme-toggle:hover {
        transform: scale(1.1);
        border-color: var(--blue);
    }

    /* Navigation */
    nav {
        position: fixed;
        top: 0;
        width: 100%;
        background: rgba(255, 255, 255, 0.8);
        backdrop-filter: blur(20px);
        z-index: 1000;
        border-bottom: 1px solid var(--border-color);
        transition: all 0.3s ease;
    }

    [data-theme="dark"] nav {
        background: rgba(15, 23, 42, 0.8);
    }

    nav.scrolled {
        box-shadow: 0 4px 20px var(--shadow-color);
    }

    .nav-content {
        max-width: 1400px;
        margin: 0 auto;
        padding: 20px 40px;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .nav-logo {
        font-size: 24px;
        font-weight: 800;
        background: linear-gradient(135deg, var(--blue-dark), var(--blue-light));
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        text-decoration: none;
    }

    .nav-right {
        display: flex;
        align-items: center;
        gap: 30px;
    }

    .nav-links {
        display: flex;
        gap: 30px;
        list-style: none;
        margin: 0;
        padding: 0;
    }

    .nav-links a {
        text-decoration: none;
        color: var(--text-secondary);
        font-weight: 600;
        font-size: 15px;
        transition: color 0.3s ease;
        position: relative;
    }

    .nav-links a::after {
        content: '';
        position: absolute;
        bottom: -5px;
        left: 0;
        width: 0;
        height: 2px;
        background: linear-gradient(135deg, var(--blue), var(--blue-light));
        transition: width 0.3s ease;
    }

    .nav-links a:hover, .nav-links a.active {
        color: var(--blue);
    }

    .nav-links a.active::after {
        width: 100%;
    }

    /* Footer */
    .site-footer {
        background: var(--text-primary);
        color: var(--bg-primary);
        padding: 40px 20px;
        text-align: center;
    }

    .site-footer p {
        color: var(--text-muted);
        font-size: 14px;
    }
</style>

@code {
    private string themeIcon = "🌙";
    private string navClass = "";
    private string currentTheme = "light";

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            // Load theme from localStorage
            currentTheme = await JS.InvokeAsync<string>("localStorage.getItem", "theme") ?? "light";
            themeIcon = currentTheme == "dark" ? "☀️" : "🌙";
            await JS.InvokeVoidAsync("setTheme", currentTheme);
            StateHasChanged();
        }
    }

    private async Task ToggleTheme()
    {
        currentTheme = currentTheme == "dark" ? "light" : "dark";
        themeIcon = currentTheme == "dark" ? "☀️" : "🌙";
        
        await JS.InvokeVoidAsync("setTheme", currentTheme);
        await JS.InvokeVoidAsync("localStorage.setItem", "theme", currentTheme);
    }
}